@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">Hello @User.FindFirst("name").Value</li>
        <li><a asp-area="AzureAD" asp-controller="Home" asp-action="SignOut">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="AzureAD" asp-controller="Home" asp-action="Signin">Sign in</a></li>
    </ul>
}
